@model WebApp.Models.MakaleKategoriViewModel
@{
    ViewBag.Title = "Danışman Makaleleri | dilokulu cms";
    Layout = "~/Areas/cms/Views/Shared/_CMSLayout.cshtml";
}

<table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
        <td class="MasterRow3_Column1">
            @Html.Partial("_MakalelerMunu")
        </td>
        <td class="MasterRow3_Column2">
            <table cellpadding="0" cellspacing="0" class="OrtaMenu">
                <tr>
                    <td class="OrtaMenuRowTitle">
                        <img src="@Url.Content("~/areas/CMS/assets/Images/Genel/b-settings.png")" style="width: 18px; height: 18px"
                            align="absmiddle" />Danışman Makaleleri
                    </td>
                </tr>
                <tr>
                    <td class="OrtaMenuRow">
                        @if (Model != null && Model.Makaleler != null && Model.Makaleler.Count > 0)
                        {
                            <table id="hor-zebra" style="width: 780px; margin: 0px;">
                                <thead>
                                    <tr>
                                        <th scope="col">BAŞLIK</th>
                                        <th scope="col">KATEGORİ</th>
                                        <th scope="col">DURUMU
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int Counter = 2;}
                                    @foreach (var item in Model.Makaleler)
                                    {                                                                              
                                        <tr @(Counter % 2 == 0 ? "class=odd" : "")>
                                            <td>
                                                <a href="@Url.Action("MakaleAcademixDetay", "makale", new { @id = item.Id })">@item.Baslik</a>
                                            </td>
                                            <td>
                                                @if (item.DilOkulu_Yazarlar.YazarTipi == "ogrenci")
                                                { 
                                                    <span>Öğrenci</span>
                                                }
                                                else
                                                {
                                                    <span>Danışman</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Durumu == 1)
                                                { 
                                                    <img src="@Url.Content("~/areas/CMS/assets/Images/ok.png")" style="width: 16px; height: 16px;cursor:pointer;" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content("~/areas/CMS/assets/Images/delete_icon.png")" style="width: 16px; height: 16px;cursor:pointer;"/>
                                                }
                                            </td>
                                        </tr>
                                                Counter++;
                                    }
                                </tbody>
                            </table>
                            <div class="pager">
                            </div>
                        }
                        else
                        {
                            <span><strong>Kayıt Bulunamadı...</strong></span>
                        }
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
