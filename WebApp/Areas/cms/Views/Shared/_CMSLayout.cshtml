<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Areas/cms/Assets/js/jquery-1.8.2.min.js")" type="text/javascript"></script>
    
    <link href="@Url.Content("~/Areas/cms/Assets/css/Page.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/cms/Assets/css/TableDesign.css")" rel="stylesheet" />
    <link href="~/Areas/cms/Assets/css/TableDesign.css" rel="stylesheet" />
    @RenderSection("HeaderWithContentPage", false)
</head>
<body>
    @RenderSection("SectionBeforeWrapper", false)
    <div id="wrapper">
        <table cellpadding="0" cellspacing="0" class="MasterTable">
            <tr id="mainLogo">
                <td class="MasterRow1">
                    <table cellpadding="0" cellspacing="0" style="width: 100%;">
                        <tr>
                            <td class="MasterRow1_Column1">
                                <img alt="BonbonWelt - CMS"  src="@Url.Content("~/Areas/cms/Assets/Images/MasterPages/logo.png")" style="height: 60px; border: none;" />
                            </td>
                            <td class="MasterRow1_Column2">
                                @*  <span style="font-size: 24px; font-weight: bold; color: Navy;">Dil Okulu</span><br />*@
                                <span style="font-size: 16px; font-weight: bold; color: Maroon;">İçerik Yönetim Sistemi</span><br />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr id="mainMenu">
                <td class="MasterRow2">
                    @Html.Partial("_cmsMenu")
                </td>
            </tr>
            <tr>
                <td>
                    @RenderBody()
                </td>
            </tr>
        </table>
    </div>
</body>
</html>